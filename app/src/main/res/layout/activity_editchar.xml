<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/character_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/editNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/nameView"
            android:layout_alignParentEnd="true"
            android:inputType="textCapWords"/>

        <TextView
            android:id="@+id/classView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/character_class"
            android:layout_below="@id/nameView"
            android:layout_alignParentStart="true"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/editClassView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editNameView"
            android:layout_toEndOf="@id/classView"
            android:layout_alignParentEnd="true"
            android:inputType="textCapWords"/>

        <include
            layout="@layout/new_rabaex"
            android:id="@+id/rabaex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/classView"
            android:layout_marginTop="16dp"/>

        <include
            layout="@layout/new_lealde"
            android:id="@+id/lealde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rabaex"
            android:layout_marginTop="16dp"/>

        <include
            layout="@layout/new_hewege"
            android:id="@+id/hewege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lealde"
            android:layout_marginTop="16dp"/>

        <include
            layout="@layout/new_haeysk"
            android:id="@+id/haeysk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hewege"
            android:layout_marginTop="16dp"/>

        <include
            layout="@layout/new_prhpch"
            android:id="@+id/prhpch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/haeysk"
            android:layout_marginTop="16dp"/>

        <include
            layout="@layout/new_acinsp"
            android:id="@+id/acinsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/prhpch"
            android:layout_marginTop="16dp"/>

        <include
            layout="@layout/new_attributes"
            android:id="@+id/attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/acinsp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/featsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feats"
            android:layout_below="@id/attributes"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editFeatsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/featsView"
            android:textSize="14sp"
            android:gravity="center"/>

        <include
            layout="@layout/new_skills"
            android:id="@+id/skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editFeatsView"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/attacksAndSpellcastingView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attacks_and_spellcasting"
            android:layout_below="@id/skills"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <include
            layout="@layout/new_attacks"
            android:id="@+id/attacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attacksAndSpellcastingView"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/equipmentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/equipment"
            android:layout_below="@id/attacks"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editEquipmentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/equipmentView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/languagesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/languages"
            android:layout_below="@id/editEquipmentView"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editLanguagesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/languagesView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/personalityView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personality"
            android:layout_below="@id/editLanguagesView"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editPersonalityView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/personalityView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/idealsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ideals"
            android:layout_below="@id/editPersonalityView"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editIdealsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/idealsView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/bondsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bonds"
            android:layout_below="@id/editIdealsView"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editBondsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/bondsView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/flawsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/flaws"
            android:layout_below="@id/editBondsView"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editFlawsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/flawsView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
