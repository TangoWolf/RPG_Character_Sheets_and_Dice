            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editLevelSixSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/levelSixSpellsView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/levelSevenSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/level_7_spells"
            android:layout_below="@id/editLevelSixSpellsView"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editLevelSevenSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/levelSevenSpellsView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/levelEightSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/level_8_spells"
            android:layout_below="@id/editLevelSevenSpellsView"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editLevelEightSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
