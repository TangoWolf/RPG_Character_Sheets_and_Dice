            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/alliesView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/backstoryView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backstory"
            android:layout_below="@id/editAlliesView"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editBackstoryView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/backstoryView"
            android:textSize="14sp"
            android:gravity="center"/>

        <include
            layout="@layout/new_spells"
            android:id="@+id/spells"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editBackstoryView"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/levelZeroSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/level_0_spells"
            android:layout_below="@id/spells"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editLevelZeroSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_below="@id/levelZeroSpellsView"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/levelOneSpellsView"
            android:layout_width="match_parent"
