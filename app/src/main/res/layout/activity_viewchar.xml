            android:layout_height="wrap_content"
            android:layout_below="@id/backstoryView"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="16dp"/>

        <include
            layout="@layout/view_spells"
            android:id="@+id/spells"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewBackstoryView"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/levelZeroSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/level_0_spells"
            android:layout_below="@id/spells"
            android:paddingTop="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/viewLevelZeroSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/levelZeroSpellsView"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/levelOneSpellsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/level_1_spells"
